.thumbnailContainer
{
    list-style:none;
    position:relative;
    overflow:visible;
    z-index:0;
        li { overflow:hidden;
            border: 2px solid #999;
            margin: 0 15px 25px 0;
            width:300px;
            height:340px; 
            background:url('worn_texture.jpg') repeat;
            padding: 10px 10px 15px 10px;
            box-shadow: 0 10px 15px #111;
            float:left;    
            p {
                text-align:center;
                font-size:18px;
                font-family:"Tahoma", sans-serif;
                height:auto;
                margin:15px auto;
                }
                img  
                {
                    width:300px;
                    height:300px; 
                    border:1px solid #333;
                    z-index:0;
                }
            }
}


img.move
{
    width:24px;
    height:24px;
    position:absolute;
    top: -16px;
    right: -14px;
    border:none;
    z-index:1;
    cursor:move;
}

.thumbnailContainer li:nth-child(odd){
-webkit-transform: rotate(-2deg);
-moz-transform: rotate(-2deg);
}
 
/* Rotate all even images 2 degrees */
.thumbnailContainer li:nth-child(even) {
-webkit-transform: rotate(2deg);
-moz-transform: rotate(2deg);
}
 
/* Don't rotate every third image, but offset its position */
.thumbnailContainer li:nth-child(3n) {
-webkit-transform: none;
-moz-transform: none;
position: relative;
top: -5px;
}
 
/* Rotate every fifth image by 5 degrees and offset it */
.thumbnailContainer li:nth-child(5n) {
-webkit-transform: rotate(5deg);
-moz-transform: rotate(5deg);
position: relative;
right: 5px;
}
 
/* Keep default rotate for every eighth, but offset it */
ul.thumbnailContainer li:nth-child(8n) {
position: relative;
top: 8px;
right: 5px;
}
 
/* Keep default rotate for every eleventh, but offset it */
ul.thumbnailContainer li:nth-child(11n) {
position: relative;
top: 3px;
left: -5px;
}


